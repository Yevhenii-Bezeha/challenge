{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "price-offers/routes": [
        "libs/price-offers/src/lib/price-offers.routes.ts"
      ],
      "shared-core": ["libs/shared/core/src/index.ts"],
      "shared-ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
